<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/mTextNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:textSize="24dp"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        />

    <ImageView
        android:layout_below="@id/mTextNama"
        android:id="@+id/hijaiyah"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ya"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Huruf Hijaiyah"
        android:textColor="#000000"
        android:textSize="15dp"

        android:layout_above="@+id/bulan"
        android:layout_toRightOf="@+id/hijaiyah"
        android:layout_marginBottom="39dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Bulan Hijriyyah"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/hijaiyah"
        android:layout_toRightOf="@+id/bulan"
        android:layout_toEndOf="@+id/bulan"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView5" />

    <ImageView
        android:layout_width="95dp"
        android:layout_height="100dp"
        android:src="@drawable/hari"

        android:layout_below="@+id/bulan"
        android:layout_alignLeft="@+id/bulan"
        android:layout_alignStart="@+id/bulan"
        android:layout_marginTop="6dp"
        android:id="@+id/imageView3" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Hari"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/textView7" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bulan"
        android:id="@+id/bulan"
        android:layout_below="@+id/hijaiyah"
        android:layout_alignLeft="@+id/hijaiyah"
        android:layout_alignStart="@+id/hijaiyah" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Angka"
        android:textColor="#000000"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="25dp"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/one"
        android:layout_marginTop="19dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

</RelativeLayout>